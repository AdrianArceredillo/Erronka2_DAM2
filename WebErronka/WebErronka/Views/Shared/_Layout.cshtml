<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebErronka</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebErronka.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebErronka</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Podium</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                PodiumJokoak
                            </a>
                            <div class="dropdown-menu">
                                @*<a class="dropdown-item" asp-area="" asp-controller="PodiumJokoak" asp-route-parameterName="@joko1id" asp-action="Index">@await Component.InvokeAsync("Jokoak", new { id = 1 })</a>
                                <a class="dropdown-item" asp-area="" asp-controller="PodiumJokoak" asp-route-parameterName="@joko2id" asp-action="Index">@await Component.InvokeAsync("Jokoak", new { id = 2 })</a>
                                <a class="dropdown-item" asp-area="" asp-controller="PodiumJokoak" asp-route-parameterName="@joko3id" asp-action="Index">@await Component.InvokeAsync("Jokoak", new { id = 3 })</a>
                                <a class="dropdown-item" asp-area="" asp-controller="PodiumJokoak" asp-route-parameterName="@joko4id" asp-action="Index">@await Component.InvokeAsync("Jokoak", new { id = 4 })</a>*@
                            </div>
                        </li>


                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                BalorazioaJokoak
                            </a>
                            @{
                                int joko1id = 1;
                                int joko2id = 2;
                                int joko3id = 3;
                                int joko4id = 4;
                            }
                            <div class="dropdown-menu">
@*                                <a class="dropdown-item" asp-area="" asp-controller="Balorazioa" asp-route-parameterName="@joko1id" asp-action="Index">@await Component.InvokeAsync("Jokoak", new { id = 1 })</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Balorazioa" asp-route-parameterName="@joko2id" asp-action="Index">@await Component.InvokeAsync("Jokoak", new { id = 2 })</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Balorazioa" asp-route-parameterName="@joko3id" asp-action="Index">@await Component.InvokeAsync("Jokoak", new { id = 3 })</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Balorazioa" asp-route-parameterName="@joko4id" asp-action="Index">@await Component.InvokeAsync("Jokoak", new { id = 4 })</a>*@
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Partaideak
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Talde1</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Talde2</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Talde3</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Talde4</a>
                            </div>
                        </li>
                       

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebErronka - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
