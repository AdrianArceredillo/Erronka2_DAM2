<odoo>

<template id="partida_list_template" name="Partida List">
<html>
<head>
  
  <style>
    h1{
      font-family: arial, sans-serif;
      color: black;
      background-color: transparent;
    }
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      margin-left:auto;
      margin-right: auto;
      width: 80%;
      box-shadow: 15px 15px 15px #EAEBE7;
    }
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 0.5px solid #DDD;
    }

    tr:hover {
      background-color: #EAEBE7;
    }

    body {
      background-color: Lightgray;
    }

  </style>
</head>   
<body>
  <div class="center-column">
    <!-- barra menu -->
    <div class="links-wrapper">
        <div class="nav-link">
            <a href="/library/partidak">PARTIDAK</a>
        </div>
        <div class="nav-link">
            <a href="/partidak_ordenatuta">PODIUM</a>
        </div>
        <div class="nav-link">
            <a href="menu.html">Menu</a>
        </div>
        <div class="nav-link">
            <a href="contact.html">Contact</a>
        </div>

    </div>
  </div>
  <div >
    <div id="wrap" class="container" >  
    <h1 style= "text-align:center">ENPRESA TXAPELKETA</h1>
      <div class = "partidaGuztiak"> 
        <h2 style= "text-align:center">Partida Guztiak</h2>
        <table border="2" >
          <tr bgcolor="#EAEBE7">
            <th style="text-align:center">Partida Id</th>
            <th style="text-align:center">Langilea</th>
            <th style="text-align:center">Puntuazioa</th>
            <th style="text-align:center">Data</th>
          </tr>
          <t t-foreach="partidak" t-as="partida">
            <tr bgcolor="white">
              <td><span t-field="partida.id" /></td>
              <td><span t-field="partida.langilea" /></td>
              <td><span t-field="partida.puntuazioa" /></td>
              <td><span t-field="partida.data" /></td>
            </tr>
          </t>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
</template>

</odoo>

