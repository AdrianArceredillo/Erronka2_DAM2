<odoo>

<template id="partidak_ordenatuta_template" name="Partida List">
<html>
<head>

  <style>
    h1{
      font-family: arial, sans-serif;
      color: black;
      background-color: transparent;
    }
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      margin-left:auto;
      margin-right: auto;
      width: 80%;
      box-shadow: 15px 15px 15px #EAEBE7;
    }
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 0.5px solid #DDD;
    }

    tr:hover {
      background-color: #EAEBE7;
    }

    body {
      font-family: Arial, Helvetica, sans-serif;
      background-color: Lightgray;
    }

    .header {
      display: flex;
      justify-content: space-around;
      padding-left: 10%;
      padding-right: 10%;
    }

    .a1{
      width: 100%;
      display: flex;
      justify-content: space-between;
    }

    .eskuma {
      width: 40%;
      display: flex;
      justify-content: space-around;
      align-items: center;
    }

    .ezkerra {
      width: 40%;
      align-items: left;
    }

    .eskuma > .links a:hover {
    color: #EAEBE7;
    letter-spacing: 2px;
    transition: 0.8s;
    }

    .eskuma > .links  {
      padding-left: 5%;
    }

    @media (max-width: 700px) {
      .eskuma, .links {   
        flex-direction: column;
      }
    }

  </style>
</head>   
<body>
  <div class="header">
    <div class="a1">
      <div class="ezkerra">
        <div class="logo">
          <h2 style= "text-align:center">ENPRESA TXAPELKETA</h2>
        </div>
      </div>
      <div class="eskuma">
        <div class="links">
          <a href="/partidak">PARTIDAK</a>
        </div>
        <div class="links">
          <a href="/partidak_ordenatuta">PODIUM</a>
        </div>
        <div class="links">
          <a href="/">ODOO</a>
        </div>
      </div>
    </div>
  </div>

  <div >
    <div id="wrap" class="container" >  
      <div class = "podium"> 
        <h2 style= "text-align:center">Podium</h2>
        <table border="2" id="example">
          <tr bgcolor="#EAEBE7">
            <th style="text-align:center">Langilea</th>
            <th style="text-align:center">Gehiengo puntuazioa</th>
          </tr>
          <t t-foreach="partidak_ordenatuta" t-as="partida">
          <tr bgcolor="white">
                <td><t t-esc="partida.erabiltzailea"/></td>
                <td style="text-align:right"><t t-esc="partida.max"/></td>
            </tr>
          </t>
        </table>
      </div>
    </div>
  </div>
  
</body>
</html>
</template>

</odoo>